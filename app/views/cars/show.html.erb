<div class="container">

  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="car-title">
        <h1><%= @car.make %></h1>
        <% if policy(@car).update? %>
          <%= link_to "Edit car", edit_car_path(@car), class: "btn btn-danger" %>
          <%= link_to "Delete car", car_path(@car), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-md-6">
      <div class="address-info-data">
        <h3><%= @car.location %></h3>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="car-infocard">
        <p class="price-style">
          <strong>Â£<%= @car.price_per_day %></strong> per day
        </p>
        <ul class="car-card-list">
          <li>Make: <%= @car.make %></li>
          <li>Model: <%= @car.model %></li>
          <li>Year: <%= @car.year %></li>
          <li>Mileage: <%= @car.mileage %></li>
          <li>Color: <%= @car.color %></li>
        </ul>

        <div class="contact-row">
          <div>
            <%= link_to '#', class: :avatarNtext do %>
              <%= image_tag(@car.user.photo, {class: :avatar}) %>
              <div class="contact-text">
                <p><strong><%= @car.user.first_name %></strong></p>
                <p><%= @car.user.address %></p>
              </div>
            <% end %>
          </div>

          <div>
            <%= link_to "Contact #{@car.user.first_name}", new_booking_path, class: "btn btn-danger asign-btn-width" %>
          </div>
        </div>

        <div class="review-row">
          <p>[No reviews yet]</p>
          <p>****.</p>
          <%= link_to "View Reviews", '#', class: "btn btn-danger asign-btn-width" %>
        </div>
      </div>
    </div>


    <div class="col-xs-12 col-md-6">
      <div class="map-card">
        <div
          id="map"
          style="width: 100%;
          height: 100%;"
          data-markers="<%= @markers.to_json %>"
        ></div>
      </div>
    </div>
  </div>

  <div id="carousel-car" class="carousel slide" data-ride="carousel" data-interval="5000">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#carousel-car" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-car" data-slide-to="1"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <%= cl_image_tag @car.photo, width:485, height: 300, crop:"fill", gravity:"auto", class: "fit-to-size" %>
      </div>
      <div class="item">
        <%= cl_image_tag "mini-5dr-hatch-cooper-d-dct.jpg", width:485, height: 300, crop:"fill", gravity:"auto", class: "fit-to-size" %>
      </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-car" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-car" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div> <!-- Carousel -->

</div>
