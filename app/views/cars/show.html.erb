<div class="container">

  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="car-title">
        <h1><%= @car.make %></h1>
        <% if policy(@car).update? %>
          <%= link_to "Edit car", edit_car_path(@car), class: "btn btn-danger" %>
          <%= link_to "Delete car", car_path(@car), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-md-6">
      <div class="address-info-data">
        <h3><%= @car.location %></h3>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="car-infocard">
        <p class="price-style">
          <strong>Â£<%= @car.price_per_day %></strong> per day
        </p>
        <ul class="car-card-list">
          <li>Make: <%= @car.make %></li>
          <li>Model: <%= @car.model %></li>
          <li>Year: <%= @car.year %></li>
          <li>Mileage: <%= @car.mileage %></li>
          <li>Color: <%= @car.color %></li>
        </ul>

        <div class="contact-row">
          <div>
            <%= link_to '#', class: :avatarNtext do %>
              <%= image_tag(@car.user.photo, {class: :avatar}) %>
              <div class="contact-text">
                <p><strong><%= @car.user.first_name %></strong></p>
                <p><%= @car.user.address %></p>
              </div>
            <% end %>
          </div>

          <div>
            <%= link_to "Contact #{@car.user.first_name}", new_booking_path, class: "btn btn-danger asign-btn-width" %>
          </div>
        </div>

        <div class="review-row">
          <p>[No reviews yet]</p>
          <p>****.</p>
          <%= link_to "View Reviews", '#', class: "btn btn-danger asign-btn-width" %>
        </div>
      </div>
    </div>


    <div class="col-xs-12 col-md-6">
      <div class="map-card">
        <div
          id="map"
          style="width: 100%;
          height: 100%;"
          data-markers="<%= @markers.to_json %>"
        ></div>
      </div>
    </div>
  </div>

  <div class="photos-container">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <%= cl_image_tag @car.photo, height: 300, width: 400, crop: :fill %>
      </div>

      <% 5.times do %>
        <div class="col-xs-12 col-md-6">
          <div class="photo-placeholder">
            <p>[Photo placeholder]</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>


</div>
