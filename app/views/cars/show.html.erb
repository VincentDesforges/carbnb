<div class="container">
  <h1>Show car</h1>
  <%= cl_image_tag @car.photo, height: 300, width: 400, crop: :fill %>
  <ul>
    <li><%= @car.make %></li>
    <li><%= @car.model %></li>
    <li><%= @car.user.username %></li>
    <li><%= @car.year %></li>
    <li><%= @car.mileage %></li>
    <li><%= @car.color %></li>
    <li><%= @car.price_per_day %></li>
    <li><%= @car.location %></li>
  </ul>

  <%= link_to "Book this car", '#', class: "btn btn-danger" %>
  <%= link_to "Edit car", edit_car_path(@car), class: "btn btn-danger" %>
  <%= link_to "Delete car", car_path(@car), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>

</div>
