<div class="container">
  <h1> <%= @user.username %> </h1>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="content-box">
          <img src="https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/gettyimages-882819120-1517934867.jpg?resize=980:*">
          <%= link_to "Upload New Picture", '#', class: "btn btn-danger" %>
      </div>
    </div>
    <div class="col-xs-12 col-md-6">
      <div class="content-box">
        <h1>Personal Details</h1>
        <div class="divider">
        <ul>
          <li>Username: <%= @user.username %></li>
          <li>First Name: <%= @user.first_name %></li>
          <li>Last Name: <%= @user.last_name %></li>
          <li>Address: <%= @user.address %></li>
          <li>Email: <%= @user.email %></li>
        </ul>
        <%= link_to "Edit Details", '#', class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="content-box">
        <h1>My Bookings</h1>
        <% @user.bookings.each do |booking| %>
        <ul>
          <li>Car: <%= booking.car.make booking.car.model %></li>
          <li>Total Price: <%= booking.total_price %></li>
          <li>Start date: <%= booking.start_date %></li>
          <li>End date: <%= booking.end_date %></li>
          <li>Counterparty: <%= booking.user_id %></li>
        </ul>
        <% end %>
        <%= link_to "Edit", '#', class: "btn btn-danger" %>
      </div>
    </div>
    <div class="col-xs-12 col-md-6">
      <div class="content-box">
        <h1>My Cars</h1>
        <% @user.cars.each do |car| %>
        <ul>
          <li>Make: <%= car.make %></li>
          <li>Model: <%= car.model %></li>
          <li>Year: <%= car.year %></li>
          <li>Mileage: <%= car.mileage %></li>
          <li>Color: <%= car.color %></li>
          <li>Price: <%= car.price_per_day %></li>
          <li>Location: <%= car.location %></li>
        </ul>
        <% end %>
        <%= link_to "Edit", '#', class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>



