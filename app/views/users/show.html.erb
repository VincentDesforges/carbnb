<div class="container">
  <div class="dashboard-wrapper">
    <h1> <%= @user.username %> </h1>
    <div class="row">
      <div class="col-xs-12 col-md-12">
        <div class="content-box">
            <%= cl_image_tag @user.photo, gravity: "face", height: 400, width: 400, crop: "thumb" %>
        </div>
      </div>
      <div class="col-xs-12 col-md-12">
        <div class="content-box">
          <h1>Personal Details</h1>
          <div class="divider">
          <ul>
            <li>Username: <%= @user.username %></li>
            <li>First Name: <%= @user.first_name %></li>
            <li>Last Name: <%= @user.last_name %></li>
            <li>Address: <%= @user.address %></li>
            <li>Email: <%= @user.email %></li>
          </ul>
          <%= link_to "Edit Details", edit_user_registration_path, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="my-cars-content-box">
          <h1>My Bookings</h1>
          <div class="cars-list">
            <ul>
            <% @user.bookings.each do |booking| %>
              <li>
                <div class="row row-display-flex">
                  <div class="spacer-box">
                    <%= link_to "#{booking.start_date} - #{booking.car.make} #{booking.car.model} - #{booking.car.user.username} | ", booking_path(booking) %>
                  </div>
                 <div class="trash">
                   <%= link_to car_booking_path(booking.car, booking), method: :delete, data: {confirm: "Are you sure?"} do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                 </div>

                </div>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="my-cars-content-box">
          <h1>My Cars</h1>
          <div class="cars-list">
            <% @user.cars.each do |car| %>
            <ul>
              <li><%= link_to "#{car.make} #{car.model}", car_path(car) %></li>
            </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
