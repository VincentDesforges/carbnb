<h2 class="show-bookings-header">Your Booking</h2>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="booking-infocard">
        <div class="first-row">
           <div class="infocard-text">
            <p class="car"><strong>Car:</strong> <%= @booking.car.make %> <%= @booking.car.model %></p>
            <p class="total_price"><strong>Total price:</strong> Â£<%= @booking.total_price %></p>
            <p class="start_date"><strong>Start date: </strong> <%= @booking.start_date %></p>
            <p class="end_date"><strong>End date: </strong> <%= @booking.end_date %></p>
            <p class="owner"><strong>Owner:</strong> <%= link_to " #{@booking.user.first_name} #{@booking.user.last_name}", user_path(@booking.car.user) %> </p>
          </div>

          <%= cl_image_tag @booking.car.user.photo, class: "owner-photo" %>
        </div>


        <div class="car-photo">
          <%= cl_image_tag @booking.car.photo, width:485, height:300, crop: :fill, class: "car-photo" %>
        </div>

      </div>
    </div>
  </div>
</div>






